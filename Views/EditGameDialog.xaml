<Window x:Class="NewLauncher.Views.EditGameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Game Details" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#222" Foreground="White"
        WindowStyle="None" ResizeMode="NoResize"
        BorderBrush="#444" BorderThickness="1">
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Edit Game Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <TextBlock Text="Title" Foreground="#AAA"/>
            <TextBox x:Name="TitleBox" Margin="0,5,0,15" Padding="5" Background="#333" Foreground="White" BorderThickness="0"/>
            
            <TextBlock Text="Description" Foreground="#AAA"/>
            <TextBox x:Name="DescBox" Margin="0,5,0,20" Padding="5" Background="#333" Foreground="White" BorderThickness="0" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelBtn" Content="Cancel" Click="CancelBtn_Click" Width="80" Height="30" Margin="0,0,10,0" Background="#444" Foreground="White" BorderThickness="0"/>
                <Button x:Name="SaveBtn" Content="Save" Click="SaveBtn_Click" Width="80" Height="30" Background="#00A8FF" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
