<Window x:Class="CustomInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Launcher Setup" Height="350" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#121212" BorderBrush="#333" BorderThickness="1">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="NEW LAUNCHER" Foreground="White" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Installer" Foreground="#888" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,40"/>
            
            <Button x:Name="InstallBtn" Content="INSTALL NOW" Click="InstallBtn_Click"
                    Width="200" Height="50"
                    Background="White" Foreground="Black"
                    FontSize="18" FontWeight="Bold"
                    BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>

            <ProgressBar x:Name="ProgressBar" Width="300" Height="4" Margin="0,30,0,0" 
                         Background="#333" Foreground="#00A8FF" BorderThickness="0" Visibility="Hidden"/>
            
            <TextBlock x:Name="StatusText" Text="" Foreground="#AAA" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>

        <Button Content="X" Click="CloseBtn_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15" 
                Background="Transparent" Foreground="#666" BorderThickness="0" FontSize="16"/>
    </Grid>
</Window>
